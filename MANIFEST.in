# Include essential project files
include README.md
include LICENSE
include pyproject.toml
include CHANGELOG.md

# Include source code
recursive-include src/ai_utilities *.py
recursive-include src/ai_utilities *.pyi
recursive-include src/ai_utilities py.typed

# Include documentation (optional but explicit)
recursive-include docs *.md
recursive-include docs *.rst

# Exclude internal / temporary docs from release
prune docs/internal
prune docs/analysis
prune docs/dev
exclude docs/v1.0_migration_baseline.md
exclude docs/LOCAL_AI_SETUP.md
exclude docs/MIGRATION.md

# Include examples (code + lightweight assets)
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.pdf

# Include audio examples ONLY from examples/assets
recursive-include examples/assets *.wav *.mp3

# Prevent accidental audio elsewhere in examples/
exclude examples/**/*.wav
exclude examples/**/*.mp3

# Include test files (for sdist, not wheel)
recursive-include tests *.py
recursive-include tests *.md

# Prune common build/cache artifacts (recommended)
prune .git
prune .venv
prune .tox
prune build
prune dist
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune .idea

# Exclude cache and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.pyd
global-exclude *.so
global-exclude .DS_Store
global-exclude .coverage
global-exclude *.bak
global-exclude *.tmp
global-exclude *.log

# Exclude large binary files from repo root
exclude *.wav
exclude *.mp3
exclude bandit-report.json

# Exclude development and CI generated artifacts
exclude .github/workflows/README.md
exclude .ai_utilities/
exclude provider_health.json
exclude provider_report_*.md
